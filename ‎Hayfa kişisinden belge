#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double a, b, c;
    double delta, x1, x2;

    cout << "a katsayisini giriniz: ";
    cin >> a;

    cout << "b katsayisini giriniz: ";
    cin >> b;

    cout << "c katsayisini giriniz: ";
    cin >> c;

    delta = pow(b, 2) - 4 * a * c;

    cout << "\nDiskriminant (?) = " << delta << endl;

    if (delta < 0) {
        cout << "Bu denklemin gercek koku yoktur." << endl;
    }
    else if (delta == 0) {
        x1 = -b / (2 * a);
        cout << "Bu denklemin tek bir gercek koku vardir." << endl;
        cout << "Kok: x = " << x1 << endl;
    }
    else {
        x1 = (-b + sqrt(delta)) / (2 * a);
        x2 = (-b - sqrt(delta)) / (2 * a);

        cout << "Bu denklemin iki farkli gercek koku vardir." << endl;
        cout << "1. Kok: x1 = " << x1 << endl;
        cout << "2. Kok: x2 = " << x2 << endl;
    }

    return 0;
}
